{
    "type": "origins:multiple",
	
	"name": "Fragmentation",
    "description": "Au lieux de mourrir, vous vous divisez en une plus petite partie plus faible.",

    "slime_death_counter": {
		"type": "origins:resource",
		"min": 0,
		"max": 2,
		"hud_render": {
			"should_render": false
		}
    },

    "slime_fragmentation": {
		"type": "origins:prevent_death",
		"condition": {
			"type": "origins:resource",
			"resource": "*:*_slime_death_counter",
			"comparison": "<",
			"compare_to": 2
		},
		"entity_action": {
			"type": "origins:change_resource",
			"resource": "*:*_slime_death_counter",
			"change": 1	
		}
    },
	
	"reset_fragmentation": {
		"type": "origins:action_on_death",
		"bientity_action": {
			"type": "origins:target_action",
			"action":{
				"type": "origins:change_resource",
				"resource": "*:*_slime_death_counter",
				"change": 0,
				"operation": "set"
			}
		}
	},
	
	"slime_normal": {
		"type": "origins:conditioned_attribute",
		"modifier": {
			"id": "*:*_normal_health",
			"attribute": "minecraft:generic.max_health",
			"amount": -10.0,
			"operation": "add_value"
		},
		"condition":{
			"type": "origins:resource",
			"resource": "*:*_slime_death_counter",
			"comparison": "==",
			"compare_to": 0
		}
    },
	
	"slime_medium": {
		"type": "origins:conditioned_attribute",
		"modifiers": [
		{
			"id": "*:*_small_health",
			"attribute": "minecraft:generic.max_health",
			"amount": -14.0,
			"operation": "add_value"
		},{
			"id": "*:*_small_size",
			"attribute": "minecraft:generic.scale",
			"amount": -0.25,
			"operation": "add_value"
		}
		],
		"condition":{
			"type": "origins:resource",
			"resource": "*:*_slime_death_counter",
			"comparison": "==",
			"compare_to": 1
		}
    },
	
	"slime_small": {
		"type": "origins:conditioned_attribute",
		"modifiers": [
		{
			"id": "*:*_tiny_health",
			"attribute": "minecraft:generic.max_health",
			"amount": -16.0,
			"operation": "add_value"
		},{
			"id": "*:*_tiny_size",
			"attribute": "minecraft:generic.scale",
			"amount": -0.5,
			"operation": "add_value"
		}
		],
		"condition":{
			"type": "origins:resource",
			"resource": "*:*_slime_death_counter",
			"comparison": "==",
			"compare_to": 2
		}
    },
	
	"slime_regrow": {
		"type": "origins:action_over_time",
		"entity_action": {
			"type": "origins:change_resource",
			"resource": "*:*_slime_death_counter",
			"change": -1
		},
		"interval": 1200,
		"condition":{
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:resource",
					"resource": "*:*_slime_death_counter",
					"comparison": ">",
					"compare_to": 0
				}
			]
		}
    }

}